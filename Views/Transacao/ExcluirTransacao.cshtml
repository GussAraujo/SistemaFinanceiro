<h3> Deseja Excluir a Transação Selecionada? </h3>

<p> <strong> Id: </strong> @ViewBag.Registo.Id.ToString() </p>
<p> <strong> Data: </strong> @ViewBag.Registo.Data.ToString() </p>
<p> <strong> Histórico: </strong> @ViewBag.Registo.Descricao.ToString() </p>
<p> <strong> Valor: </strong> @ViewBag.Registo.Valor.ToString() </p>

<button type="button" onclick="Cancelar()" class="btn btn-block btn-default"> Cancelar </button>
<button type="button" onclick="Excluir(@ViewBag.Registo.Id.ToString())" class="btn btn-block btn-danger"> Excluir </button>

<script>
    function Excluir(id) {
        window.location.href = "../Excluir/" + id;
    }
    function Cancelar() {
        window.location.href = "../Index";
    }
</script>