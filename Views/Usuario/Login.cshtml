@model UsuarioModel
@{
    ViewData["Title"] = "Login";

    Layout = "../Shared/_LayoutLogin.cshtml";
}
<div class="container" style="background-color: rgb(239, 239, 239, 0.95); border-radius: 10px; padding: 20px; width: 400px; margin-top: 30px">
    @if (TempData["LoginInvalido"] != null)
    {
        <div class="alert alert-danger">
            <strong>@TempData["LoginInvalido"]</strong>
        </div>
    }
    <form asp-controller="Usuario" asp-action="ValidarLogin">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" placeholder="Enter email" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" placeholder="Enter password" asp-for="Senha">
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox"> Lembrar Me
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
        <button type="button" class="btn btn-default" onclick="javascript:window.location.href='../Usuario/Registrar'"> Registrar </button>
    </form>
</div>